{
    "version": "1.0",
    "rules": {
        "python": {
            "formatting": {
                "maxLineLength": 120,
                "indentSize": 4,
                "useTabs": false,
                "trailingComma": "all",
                "quoteStyle": "double",
                "docstringStyle": "google",
                "importOrder": [
                    "standard_library",
                    "third_party",
                    "local"
                ]
            },
            "linting": {
                "enabled": true,
                "rules": {
                    "pylint": {
                        "enabled": true,
                        "config": {
                            "max-line-length": 120,
                            "disable": [
                                "C0111",
                                "C0103",
                                "W0511"
                            ]
                        }
                    },
                    "flake8": {
                        "enabled": true,
                        "config": {
                            "max-line-length": 120,
                            "ignore": [
                                "E203",
                                "W503"
                            ]
                        }
                    }
                }
            },
            "typeChecking": {
                "enabled": true,
                "strict": true
            },
            "testing": {
                "testFramework": "pytest",
                "coverage": {
                    "enabled": true,
                    "minimumCoverage": 80
                }
            }
        },
        "git": {
            "commitMessage": {
                "format": "type(scope): description",
                "types": [
                    "feat",
                    "fix",
                    "docs",
                    "style",
                    "refactor",
                    "perf",
                    "test",
                    "chore"
                ],
                "maxLength": 72
            },
            "branchNaming": {
                "pattern": "^(feature|bugfix|hotfix|release)/[a-z0-9-]+$"
            }
        },
        "editor": {
            "autoSave": true,
            "formatOnSave": true,
            "trimTrailingWhitespace": true,
            "insertFinalNewline": true,
            "trimFinalNewlines": true,
            "wordWrap": "off",
            "rulers": [120],
            "tabSize": 4,
            "insertSpaces": true,
            "detectIndentation": false
        },
        "project": {
            "structure": {
                "src": "core",
                "tests": "tests",
                "docs": "docs",
                "config": "config"
            },
            "naming": {
                "files": {
                    "python": "snake_case",
                    "config": "kebab-case"
                },
                "classes": "PascalCase",
                "functions": "snake_case",
                "variables": "snake_case",
                "constants": "UPPER_SNAKE_CASE"
            },
            "codingStandards": {
                "language": {
                    "comments": "en",
                    "userMessages": "en",
                    "warnings": "en",
                    "description": "All code comments, user-facing messages, warnings, and prompts must be written in English"
                }
            }
        },
        "dependencies": {
            "python": {
                "version": "3.12",
                "packageManager": "uv",
                "requirementsFile": "requirements.txt",
                "virtualEnv": {
                    "enabled": true,
                    "path": ".venv"
                }
            }
        },
        "security": {
            "secrets": {
                "enabled": true,
                "patterns": [
                    "API_KEY",
                    "SECRET",
                    "PASSWORD",
                    "TOKEN"
                ],
                "ignoreFiles": [
                    ".env",
                    ".env.*"
                ]
            }
        },
        "docker": {
            "enabled": true,
            "composeFile": "docker-compose.yml",
            "ignoreFiles": [
                ".dockerignore"
            ]
        }
    }
} 